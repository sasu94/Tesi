{{#section 'head'}}
    <title>Submit</title>
<script type="text/javascript" src="../js/submit.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{{/section}}
<section>
    <div class="page-header">
        <h1>Submit your file</h1>
    </div>
    <form class="form-horizontal" action="/submit" enctype="multipart/form-data" method="post" role="form">
        <div class="form-group">
            <label class="col-lg-2 control-label" for="name">Name</label>
            <div class="col-lg-4">
                <input id="name" name="name" type="text" class="form-control" required="">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="subject">Subject</label>
            <div class="col-lg-4">
                <select name="subject" id="subjects" class="form-control" required>
                    {{#if subject}}
                        {{#each subject}}
                            <option value="{{this.Id}}">{{this.Id}}</option>
                    {{/each}}
                    {{/if}}
                </select>
            </div>
            <div class="col-lg-4">
                <a href="/subjects">New Subject</a>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="project">Project</label>
            <div class="col-lg-4">
                <select name="project" id="projects" class="form-control" required>
                    {{#if projects}}
                        {{#each projects}}
                            <option value="{{this.Id}}">{{this.Name}}</option>
                    {{/each}}
                    {{/if}}
                </select>
            </div>
            <div class="col-lg-4">
                <a href="#" id="newProj">New Project</a>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="photo">Choose a photo</label>
            <div class="col-lg-4">
                <input id="photo" name="photo" type="file">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="file">Choose a csv file</label>
            <div class="col-lg-4">
                <input id="file" name="file" type="file" accept=".csv" required="">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button id="submit" type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>

        <div class="alert alert-info disappear">
            Wait some minutes until your file is completely uploaded  <i class="fa fa-circle-o-notch fa-spin" style="font-size: 24px"></i>
        </div>
        {{#if flash}}
           <div class="alert alert-dismissible alert-success">
               <button type="button" class="close"
                   data-dismiss="alert" aria-hidden="true">
                   &times;
               </button>
               {{{flash.message}}}
           </div>
        {{/if}}
    </form>

    <div class="modal fade" id="subModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times; </button>
                    <h4 class="modal-title" id="myModalLabel">Add a new Subject</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="name">Name</label>
                            <div class="col-lg-8">
                                <input id="Id" name="Id" type="text" class="form-control" required="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="protocolNumber">Protocol Number</label>
                            <div class="col-lg-8">
                                <input id="protocolNumber" name="ProtocolNumber" type="text" class="form-control" required="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="status">Status</label>
                            <div class="col-lg-8">
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="Status" value="Affected" checked>Affected</label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="Status" value="Not Affected">Not Affected</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="GeneticStatus">Genetic Status</label>
                            <div class="col-lg-8">
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="GeneticStatus" value="Familiar" checked>Familiar</label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="GeneticStatus" value="Sporadic">Sporadic</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="status">Sex</label>
                            <div class="col-lg-8">
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="Sex" value="M" checked>M</label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="Sex" value="F">F</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="status">Age</label>
                            <div class="col-lg-8">
                                <input id="age" name="Age" type="text" class="form-control" required="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="status">Age of Onset</label>
                            <div class="col-lg-8">
                                <input id="ageOfOnset" name="AgeOfOnset" type="text" class="form-control" required="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="photo">Submit a PED</label>
                            <div class="col-lg-8">
                                <input id="genealogic" name="photo" type="file" required="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="family">Family name</label>
                            <div class="col-lg-8">
                                <select id="famName" name="family" class="form-control" required="">
                                </select>
                            </div>
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close </button>
                    <button id="newSubject" type="button" class="btn btn-primary">Submit changes </button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
    </div>

    <div class="modal fade" id="projModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times; </button>
                    <h4 class="modal-title">Add a new Project</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-4 control-label" for="photo">Project name</label>
                            <div class="col-lg-8">
                                <input id="projName" name="name" type="text" class="form-control" required="">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close </button>
                    <button id="newProject" type="button" class="btn btn-primary">Submit changes </button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
    </div>
</section>
